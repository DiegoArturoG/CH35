package com.hackerranck.ifelse;
import java.util.Scanner;

public class ElseIfEjercicio {
	public static void main (String[] args) {

		//Scanner para leeer entrada del usuario 
		
		Scanner scan= new Scanner(System.in);
		
		//Solicitud para que el ususario ingrese un nÃºmero
		System.out.println("Enter a whole number from 1 to 100: ");
		
		//DeclaraciÃ³n de varialble de tipo entero y lectura del mismo
		
		int number = scan.nextInt();
		
		//Loop if-else
		
		if (even(number)) {
			System.out.println("Not Weird");
		} else {
			System.out.println("Weird");
		}
		
		//Close scanner
		scan.close();
		
	}
		
	//Method for par or impar number 
	
	static boolean even( int num) {
		return num % 2 == 0 && num >=1 && num <=100; 
		
	}
		

}
