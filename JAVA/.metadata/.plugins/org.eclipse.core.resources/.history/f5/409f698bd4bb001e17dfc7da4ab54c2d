package org.generation.employee.manager;

public class ManagerMain {
	public static void main(String [] agrs) {
		
		Manager Fernanda = new Manager("Fernanda Ramos", 136, 45365.20, "Manager", 6);
		System.out.println(Fernanda);
		
		//Método calcular salario 
		Fernanda.calcularSalario();
		
		double salarioFer = Fernanda.getSalarioBase();
		System.out.println("El salario de "+Fernanda.getNombreCompleto()+ " con un puesto de "+Fernanda.getPuesto()+ " su salario es de " +salarioFer+ ", Ella tiene "+Fernanda.getAntiguedad()+ " años de antiguedad"+"por lo tanto tiene un sueldo con bono de "+ Fernanda.getSalario());
		
		
		
	}

}
